{
  "name": "inkyphat",
  "version": "0.3.0",
  "description": "NodeJS Library for Raspberry Pi InkyPhat",
  "main": "lib/inkyphat.js",
  "directories": {
    "example": "examples",
    "lib": "lib",
    "test": "test"
  },
  "dependencies": {
    "onoff": "^1.1.9",
    "pi-spi": "^1.0.2"
  },
  "devDependencies": {
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "coveralls": "^3.0.0",
    "mocha": "^4.1.0",
    "nyc": "^11.4.1",
    "sinon": "^4.2.0",
    "sinon-chai": "^2.14.0"
  },
  "scripts": {
    "test": "node_modules/.bin/mocha test/* --reporter spec --timeout 3000",
    "coverage": "nyc --reporter=html --reporter=text node_modules/mocha/bin/_mocha test/*",
    "report": "nyc report --reporter=text-lcov | coveralls",
    "jshint": "jshint lib examples test",
    "preversion": "npm run jshint && npm test",
    "postversion": "git push && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pbertie/inkyphat-node.git"
  },
  "keywords": [
    "inkyphat",
    "inky-phat",
    "pimoroni",
    "raspberry-pi",
    "raspi",
    "raspberry",
    "pi"
  ],
  "author": "Paul Birtle",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/pbertie/inkyphat-node/issues"
  },
  "homepage": "https://github.com/pbertie/inkyphat-node#readme"
}
